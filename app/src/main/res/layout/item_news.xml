<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginLeft="10dp"
    android:layout_marginTop="8dp"
    android:layoutDirection="rtl"
android:layout_marginBottom="8dp"
    android:layout_marginRight="10dp"
    android:elevation="4dp"
    app:cardCornerRadius="7dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view_user"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/dalel"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginRight="4dp"
            app:layout_constraintRight_toLeftOf="@+id/image_view_user"
            app:layout_constraintTop_toTopOf="@+id/image_view_user" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="160dp"
            android:gravity="right"
            android:padding="6dp"
            tools:text="   تعلن مكتبة  الدولي عن وجود تخفيضات نظرا لوجود حاله تحرش داخل المعرض وشكرا"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="منذ 12 دققة"

            android:textSize="10sp"
android:layout_marginRight="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/image_view_user"
            app:layout_constraintRight_toRightOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintVertical_bias="0.0" />

<!--        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="280dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:roundedCornerRadius="4dp" /> -->

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="0dp"
                android:layout_height="270dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:roundedCornerRadius="4dp"

                />



        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:elevation="1dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/background_count1"
            android:gravity="center"
            android:visibility="gone"


            android:padding="2dp"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/view_pager"
            app:layout_constraintTop_toTopOf="@+id/view_pager"
            app:layout_goneMarginTop="14dp"
            android:textColor="@color/white"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

